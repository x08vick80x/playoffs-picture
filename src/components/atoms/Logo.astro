---
import { getTeamId } from "../../utils/team-mapping.js";

interface Props {
    team: string; // Team name (e.g., "Bills") or ID
    size?: "sm" | "md" | "lg" | "xl"; // sm=24, md=40, lg=55, xl=80
    className?: string;
    grayscale?: boolean;
}

const { team, size = "md", className = "", grayscale = false } = Astro.props;

const sizeMap = {
    sm: 24,
    md: 40,
    lg: 55,
    xl: 80,
};

const pixelSize = sizeMap[size];
const teamId = getTeamId(team);
---

<svg
    class:list={[
        "team-logo",
        `team-logo--${size}`,
        { "team-logo--grayscale": grayscale },
        className,
    ]}
    width={pixelSize}
    height={pixelSize}
    viewBox="0 0 24 24"
>
    <use href={`/sprites.svg#${teamId}`}></use>
</svg>
